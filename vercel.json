{
    "version": 2,
    "builds": [
      {
        "src": "backend/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/wsgi.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      },
      {
        "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
      }
    ]
  }