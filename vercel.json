{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/$1"
      },
      {
        "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }]
      }
    ]
  }